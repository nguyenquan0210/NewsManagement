@{
}
@model IEnumerable<NewsManagement.ViewModels.Catalog.CatalogVm>
@{ 
    var i = 0;
}
<div class="full-menu">
    <div class="inner">
        <div class="row col-up-6">
            @foreach (var item in Model)
            {
                if (i < 12)
                {
                    <div class="col no-pad">
                        <ul class="nav vertical">
                            <li class="texxtalign">
                                <a rel="nofollow" class="uppercase" title="@item.Name"
                                   asp-action="@(item.Name.ToUpper() == "VIDEO" ? "NewsCategoryVideo" : "NewsCategory")" asp-controller="News" asp-route-categoryid="@item.Id" >
                                    <h2>@item.Name</h2>
                                </a>
                               
                            </li>
                        </ul>
                    </div>
                }
                i++;

            }


        </div>
    </div>
</div>
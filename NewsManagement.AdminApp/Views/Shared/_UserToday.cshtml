@using NewsManagement.ViewModels.System.ActiveUsers
@model IEnumerable<ActiveUserVm>

@{
    double mothbefore = ViewBag.CountAllUser;
    double mothafter = Model.Count(x => x.DateActive.ToString("dd/MM/yyyy") == DateTime.Now.ToString("dd/MM/yyyy"));

    double h = mothafter - mothbefore;
    double pt = 0;
    pt = h * 100 / mothbefore;
    if(mothafter == mothbefore)
    {
        pt = 100;
    }

}

<div class="card ">
    <div class="card-body p-3">
        <div class="row">
            <div class="col-8">
                <div class="numbers">
                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Người Dùng Hôm Nay</p>
                    <h5 class="font-weight-bolder mb-0">
                        @mothafter
                        <span class="@(h<0?"text-danger":"text-success") text-sm font-weight-bolder">@(h<0 ? Math.Round(pt, 2).ToString(): "+" + Math.Round(pt, 2).ToString())%</span>
                    </h5>
                </div>
            </div>
            <div class="col-4 text-end">
                <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                    <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>
</div>